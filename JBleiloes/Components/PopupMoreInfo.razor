@using JBleiloes.data.Veiculos

@if (IsVisible)
{
    <div class="popup">
        <div class="popup-content">
            <button @onclick="Close" class="close-button">
                <img class="image-button" src="close-x.jpg" alt="Close" />
            </button>
            <p>Marca: @veiculo.Marca</p>
            <p>Modelo: @veiculo.Modelo</p>
            <p>Ano: @veiculo.Ano</p>
            <p>Quilometragem: @(Convert.ToInt32(veiculo.Quilometragem))km</p>
            @*<p>DUA: @veiculo.DUA</p>
        <p>Seguro: @veiculo.Seguro</p>*@
        </div>
    </div>
}

<style>

    .popup-content {
        position: relative;
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    }

    .popup-content {
        background: white;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    }

    .close-button {
        position: absolute;
        top: 10px;
        right: 10px;
        border: none;
        background: none;
        cursor: pointer;
    }

    .image-button {
        width: 20px;
        height: 20px;
    }

</style>

@code {

    [Parameter]
    public Veiculo veiculo { get; set; }

    public bool IsVisible { get; set; }

    public void Show()
    {
        IsVisible = true;
        StateHasChanged();
    }

    public void Close()
    {
        IsVisible = false;
        StateHasChanged();
    }

}