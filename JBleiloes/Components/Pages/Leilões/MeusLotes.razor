@page "/meuslotes"

@using JBleiloes.data.Utilizadores
@using JBleiloes.data.Leiloes
@using JBleiloes.data

<PageTitle>Leilões @SessionUser.getSessionUser().getUsername()</PageTitle>

<h1>Leilões @SessionUser.getSessionUser().getUsername()</h1>

<div class="leilao-container">
    @if (leiloes == null)
    {
        <h3>Loading . . . </h3>
    }
    else
    {
        @foreach (Leilao leilao in leiloes)
        {
            <div class="rectangle">
                <Leilaocard Leilao="leilao" />
            </div>
        }
    }
</div>

<style>

    .leilao-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
        margin-top: 20px;
    }

    .rectangle {
        width: 200px;
        height: 100px;
    }

</style>

@code {
    private IEnumerable<Leilao> leiloes;

    // Instantiate LeilaoRepository
    private LeilaoRepository leilaoRepository = new LeilaoRepository();

    // Call the GetLeiloes method during the component initialization
    protected override void OnInitialized()
    {
        leiloes = leilaoRepository.getLeiloesUtilizador(@SessionUser.getSessionUser().getUsername());
    }
}
