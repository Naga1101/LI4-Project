@page "/lotes"

@using JBleiloes.data.Leiloes
@using JBleiloes.data
@using JBleiloes.DB.Tabelas
@rendermode InteractiveServer

<PageTitle>Leilões a decorrer</PageTitle>

<h1>Leilões</h1>

<div class="leilao-container">
    @if (leiloes == null)
    {
        <h3>Loading . . . </h3>
    }
    else
    {
        @foreach (Leilao leilao in leiloes)
        {
            byte user_type = jb.getUserTypeLeilao(leilao.vendedor);
            @if (user_type == 0)
            {
                <div class="rectangle">
                    <Leilaocard Leilao="leilao" />
                </div>
            }
        }

        <div class="line"></div>

        <h2>Lotes de Utilizadores</h2>

        @foreach (Leilao leilao in leiloes)
        {
            byte user_type = jb.getUserTypeLeilao(leilao.vendedor);
            @if (user_type == 1)
            {
                <div class="rectangle">
                    <Leilaocard Leilao="leilao" />
                </div>
            }
        }
    }
</div>

<style>
    .line {
        border-bottom: 1px solid #2b2b27cf;
        width: 100%;
        margin: 20px 0;
    }

    .leilao-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 10px;
        margin-top: 20px;
        padding-bottom: 20px;
    }

    .rectangle {
        width: 500;
        height: 500;
    }

    h2 {
        width: 100%;
        margin-top: 20px;
    }
</style>

@code {
    JBLeiloes jb = new JBLeiloes();

    private ICollection<Leilao> leiloes2 = new JBLeiloes().getLeilõesDecorrer();

    private IEnumerable<Leilao> leiloes = DBLeilao.getInstance().GetLeiloes();
}