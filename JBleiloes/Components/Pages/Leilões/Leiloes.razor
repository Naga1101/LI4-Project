@page "/lotes"
@using JBleiloes.data.Leiloes
@using JBleiloes.data

<PageTitle>Leilões a decorrer</PageTitle>

<h1>Leilões</h1>

<div class="leilao-container">
    @if (leiloes == null)
    {
        <h3>Loading . . . </h3>
    }
    else
    {
        @foreach (Leilao leilao in leiloes)
        {
            byte user_type = jb.getUserTypeFromLeilao(leilao.vendedor);
            @if (user_type == 0)
            {
                <div class="rectangle">
                    <Leilaocard Leilao="leilao" />
                </div>
            }
        }

        <div class="line"> </div>

        @foreach (Leilao leilao in leiloes)
        {
            byte user_type = jb.getUserTypeFromLeilao(leilao.vendedor);
            @if (user_type == 1)
            {
                <div class="rectangle">
                    <Leilaocard Leilao="leilao" />
                </div>
            }
        }
    }   
</div>

<style>

    .line {
        border-bottom: 1px solid #2b2b27cf;
        margin: 20px;
    }

    .leilao-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 10px;
        margin-top: 20px;
    }

    .rectangle {
        width: 500;
        height: 500;
    }
</style>


@code {
    JBLeiloes jb = new JBLeiloes();

    private ICollection<Leilao> leiloes2 = new JBLeiloes().getLeilõesDecorrer();

    private IEnumerable<Leilao> leiloes;

    // Instantiate LeilaoRepository
    private LeilaoRepository leilaoRepository = new LeilaoRepository();

    // Call the GetLeiloes method during the component initialization
    protected override void OnInitialized()
    {
        leiloes = leilaoRepository.GetLeiloes();
    }
}
