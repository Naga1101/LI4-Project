@page "/lotes"

@using JBleiloes.data.Leiloes
@using JBleiloes.data

<PageTitle>Leilões a decorrer</PageTitle>

<h1>Leilões</h1>

<div class="leilao-container">
    @if (leiloes == null)
    {
        <h3>Loading . . . </h3>
    }
    else
    {
        @foreach (Leilao leilao in leiloes)
        {
            <div class="rectangle">
                <Leilaocard Leilao="leilao" />
            </div>
        }
    }
</div>

<style>

    .leilao-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        gap: 20px;
        margin-top: 20px;
    }

    .rectangle {
        width: 200px;
        height: 100px;
        background-color: #3498db;
    }

</style>

@code {
    private ICollection<Leilao> leiloes = new JBLeiloes().getLeilõesDecorrer();
}
