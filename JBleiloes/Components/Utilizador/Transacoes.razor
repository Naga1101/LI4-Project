@page "/transacoes"

@using JBleiloes.data.Utilizadores
@using JBleiloes.data.Leiloes
@using JBleiloes.data
@using JBleiloes.Components.Leiloes


<PageTitle>Transações</PageTitle>

<h1>Leilões do @SessionUser.getSessionUser().nome</h1>

<h2>Historico de vendas </h2>
<div class="leilao-container">
    @if (leiloesHistoricoVendas == null)
    {
        <h3>Loading . . . </h3>
    }
    else
    {
        @foreach (Leilao leilao in leiloesHistoricoVendas)
        {
            <div class="rectangle">
                <Leilaocard Leilao="leilao" />
            </div>
        }
    }
</div>

<h2>Historico de compras </h2>
<div class="leilao-container">
    @if (leiloesHistoricoCompras == null)
    {
        <h3>Loading . . . </h3>
    }
    else
    {
        @foreach (Leilao leilao in leiloesHistoricoCompras)
        {
            <div class="rectangle">
                <Leilaocard Leilao="leilao" />
            </div>
        }
    }
</div>

<style>
    .leilao-container {
        display: flex;
        gap: 5px; /* Add gap between cards */
        padding: 10px;
        align-items: flex-start; /* Allow cards to expand above container limits */
        margin-right: 30px; /* Add right margin */
        margin-left: 30px; /* Add right margin */
    }

    .rectangle {
        width: 354px;
        height: 400px;
        padding: 10px; /* Add some padding for better spacing */
        position: relative; /* Add relative positioning for pseudo-element */
    }

    .redirect-link {
        cursor: pointer;
    }

    .link-text {
        font-size: 40px; /* Adjust as needed */
        color: gray;
        text-decoration: none;
    }

</style>


@code {
    private Utilizador? user = @SessionUser.getSessionUser();
    private JBLeiloes jb = new JBLeiloes();
    private Leilao[] leiloesHistoricoVendas;
    private Leilao[] leiloesHistoricoCompras;


    protected override void OnInitialized()
    {
        leiloesHistoricoVendas = jb.GetHistoricoVendas(@SessionUser.getSessionUser().getUsername(), jb);
        leiloesHistoricoVendas = jb.GetHistoricoCompras(@SessionUser.getSessionUser().getUsername(), jb);
    }
}
